@model VidlyApp.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
    <li>Date Released: @Model.ReleasedDate.ToShortDateString()</li>
    <li>Numbers In Stock: @Model.NumbersInStock</li>

</ul>
