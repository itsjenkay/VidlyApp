@model VidlyApp.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "AddNewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add New Movie</h2>
@using (Html.BeginForm("AddNewMovie", "Movies"))
{
    <div class=" form-group">
        @Html.LabelFor(c => c.Movie.Name) 
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateAdded)
        @Html.TextBoxFor(c => c.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.ReleasedDate)
        @Html.TextBoxFor(c => c.Movie.ReleasedDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Movie.GenreId)
        @Html.DropDownListFor(c => c.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
    </div>

   

    <div class="form-group">
        @Html.LabelFor(c => c.Movie.NumbersInStock)
        @Html.TextBoxFor(c => c.Movie.NumbersInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <div>
        <button type="submit" class="btn btn-primary">
            Save
        </button>
    </div>
}
